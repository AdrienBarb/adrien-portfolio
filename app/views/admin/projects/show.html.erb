
<h2><%= @project.title %></h2>
<p><%= @project.description %></p>
<p><%= @project.link %></p>
<% if @project.image %>
  <%= cl_image_tag(@project.image.try(:key)) %>
<% end %>

<%= link_to 'Modifier le projet', edit_admin_project_path(@project) %>
<%= link_to 'Supprimer le projet', admin_project_path(@project), data: { confirm: 'Etes vous sur?' }, method: :delete %>
