<div class="admin-project-show-wrapper">

  <h2><%= @project.title %></h2>
  <p><%= @project.description %></p>
  <p><%= @project.link %></p>
  <% if @project.tags.any? %>
    <% @project.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  <% end %>
  <% if @project.image %>
    <%= cl_image_tag(@project.image.try(:key)) %>
  <% end %>

  <div class="links">
    <%= link_to 'Modifier le projet', edit_admin_project_path(@project), class: 'button-nav' %>
    <%= link_to 'Supprimer le projet', admin_project_path(@project), data: { confirm: 'Etes vous sur?' }, method: :delete, class: 'button-nav' %>
  </div>
</div>





