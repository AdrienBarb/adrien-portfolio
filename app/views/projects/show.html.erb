<div class="project-show-wrapper">
  <% if @project.images.any? %>
    <%= cl_image_tag(@project.images[1].try(:key)) %>
  <% end %>
  <div class="project-info">
    <div class="description">
      <h2><%= @project.title %></h2>
      <p> <%= @project.description %> </p>
    </div>
    <div class="stack">
      <h4>Techniques utilisÃ©es:</h4>
      <% if @project.tags.any? %>
        <ul>
          <% @project.tags.each do |tag| %>
            <li>
              <%= tag.name %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <a href="<%= @project.link %>" class="button-link">Visiter le site internet</a>
  </div>
</div>
