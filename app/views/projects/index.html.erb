<div class="projects-index-wrapper">
  <h2>Mes r√©alisations:</h2>

  <div class="projects-index">
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <div class="project">
          <%= link_to project_path(project) do %>
            <% if project.image %>
              <%= cl_image_tag(project.image.try(:key)) %>
            <% end %>
            <div class="title">
              <h3><%= project.title %></h3>
            </div>
          <% end %>
        </div>

      <% end %>
    <% end %>
  </div>
</div>
